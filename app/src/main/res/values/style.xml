<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalendarTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarHeaderConfirmButton">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
    </style>
    <style name="CustomRoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircularImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.Assignment3_RelationshipCounter.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="Widget.Assignment3_RelationshipCounter.Button.Secondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary1_10</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.Assignment3_RelationshipCounter.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- Corner Radius -->
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>

        <!-- Outline Color -->
        <item name="boxStrokeWidth">1.5dp</item>

        <!-- Hint Color -->
        <item name="hintTextColor">@color/grey_400</item>
    </style>

    <!-- Custom TextInputEditText Style -->
    <style name="Widget.Assignment3_RelationshipCounter.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <!-- Padding -->
        <item name="android:padding">16dp</item>

        <!-- Text Appearance -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Circular Icon Button -->
    <style name="Widget.Assignment3_RelationshipCounter.CircularIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <!-- Button Size -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>

        <!-- Icon Customizations -->
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/primary</item>

        <!-- Background and Insets -->
        <item name="android:backgroundTint">@android:color/transparent</item>

        <!-- Shape Customization -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Assignment3.Button.Circle</item>

        <!-- Stroke and Outline -->
        <item name="strokeColor">@color/primary_with_opacity</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <!-- Circular Back Button -->
    <style name="Widget.Assignment3_RelationshipCounter.CircularBackButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <!-- Button Size -->
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>

        <!-- Icon Customizations -->
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@android:color/black</item>

        <!-- Background and Insets -->
        <item name="android:backgroundTint">@android:color/transparent</item>

        <!-- Shape Customization -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Assignment3.Button.Circle</item>

        <!-- Stroke and Outline -->
        <item name="strokeColor">@color/stroke_back_button</item> <!-- Define #22172A with 8% opacity in colors.xml -->
        <item name="strokeWidth">1.5dp</item>
    </style>

    <!-- Circular Shape Appearance -->
    <style name="ShapeAppearanceOverlay.Assignment3.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>




</resources>