<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FDF7FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconSize="18dp"
                app:icon="@drawable/ic_back"
                android:backgroundTint="@color/white"
                android:contentDescription="Back"
                style="@style/Widget.Assignment3_RelationshipCounter.CircularBackButton" />

            <!-- Title -->
            <TextView
                android:id="@+id/friendship_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Friendship Detail"
                android:textSize="24sp"
                android:fontFamily="@font/hellix_bold"
                android:textColor="@color/black"
                android:gravity="center" />
        </RelativeLayout>

        <!-- Row 1: Friendship Tag -->
        <TextView
            android:id="@+id/friendship_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:text="⭐ Close Friend"
            android:background="@drawable/bg_rounded_tag"
            android:fontFamily="@font/hellix_bold"
            android:layout_marginBottom="16dp" />

        <!-- Row 2: User Images and Names -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Friend Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Friend Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/friend_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample"
                    app:strokeColor="@color/secondary1"
                    app:strokeWidth="6dp"
                    android:padding="5dp"
                    app:shapeAppearanceOverlay="@style/CircleImage" />

                <!-- Friend Name -->
                <TextView
                    android:id="@+id/friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Friend Name"
                    android:fontFamily="@font/hellix_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_rounded_secondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Heart Divider -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❤️"
                android:textSize="24sp"
                android:layout_marginHorizontal="16dp" />

            <!-- Current User Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Current User Image -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/current_user_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample"
                    app:strokeColor="@color/white"
                    app:strokeWidth="6dp"
                    android:padding="5dp"
                    app:shapeAppearanceOverlay="@style/CircleImage" />

                <!-- Current User Name -->
                <TextView
                    android:id="@+id/current_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Your Name"
                    android:fontFamily="@font/hellix_semibold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Days Together -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Left Insight Wrapper -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <!-- Left Insight -->
                <TextView
                    android:id="@+id/left_insight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:includeFontPadding="false"
                    android:text="Insights"
                    android:fontFamily="@font/hellix_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/bg_insight_white"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Days Count Wrapper -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <!-- Days Count -->
                <TextView
                    android:id="@+id/days_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:includeFontPadding="false"
                    android:text="100 Days"
                    android:fontFamily="@font/hellix_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_days_count"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Right Insight Wrapper -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <!-- Right Insight -->
                <TextView
                    android:id="@+id/right_insight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:includeFontPadding="false"
                    android:text="Insights"
                    android:fontFamily="@font/hellix_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/bg_insight_white"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 4: Activity Dashboard -->
        <TextView
            android:id="@+id/activity_dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Dashboard"
            android:fontFamily="@font/hellix_bold"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white">

            <!-- Bar Chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/activity_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
